<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="logging" type="Health.Direct.Common.Diagnostics.LogFileSection, Health.Direct.Common" />
    <section name="ioc" type="Health.Direct.Common.Container.IocContainerSection, Health.Direct.Common" />
    <section name="container" type="Health.Direct.Common.Container.SimpleContainerSection, Health.Direct.Common" />
    <sectionGroup name="ServiceSettingsGroup">
      <section name="DnsRecordManagerServiceSettings" type="Health.Direct.Config.Client.ClientSettingsSection, Health.Direct.Config.Client"         
        allowLocation="true" 
        allowDefinition="Everywhere" />
      <section name="CertificateManagerServiceSettings" type="Health.Direct.Config.Client.ClientSettingsSection, Health.Direct.Config.Client"
        allowLocation="true"
        allowDefinition="Everywhere" />
      <section name="DnsServerSettings" type="Health.Direct.DnsResponder.DnsServerSettingsSection, Health.Direct.DnsResponder"
        allowLocation="true"
        allowDefinition="Everywhere" />
    </sectionGroup>
  </configSections>
  <ServiceSettingsGroup>
    <DnsRecordManagerServiceSettings Url="http://localhost:6692/DomainManagerService.svc/DnsRecords" />
    <CertificateManagerServiceSettings Url="http://localhost:6692/CertificateService.svc/Certificates" />
    <DnsServerSettings
      Address="127.0.0.1"
      Port="5353">
      <UdpServerSettings
        MaxOutstandingAccepts="1" />
    </DnsServerSettings>
  </ServiceSettingsGroup>
  <logging>
    <location directory="~\Log" name="dnsResponderWinSrv" extension="log" />
    <behavior rolloverFrequency="24" loggingLevel="Debug" />
    <eventLog threshold="Fatal" source="Health.Direct.DnsResponder.WinSrv" />
  </logging>
  <ioc type="Health.Direct.Common.Container.SimpleDependencyResolver, Health.Direct.Common" />
  <container>
    <components>
      <component service="Health.Direct.Common.Diagnostics.ILogFactory, Health.Direct.Common"
                 type="Health.Direct.Diagnostics.NLog.NLogFactory, Health.Direct.Diagnostics.NLog"
                 scope="Singleton"
                       />
    </components>
  </container>
  <appSettings>
  </appSettings>
</configuration>