<?xml version="1.0" encoding="utf-8" ?> 
<SmtpAgentConfig>
  <Domain>DomainName</Domain>  
  <DomainManager>
    <Url>http://localhost/ConfigService/DomainManagerService.svc/Domains</Url>
	<CacheSettings>
      <Cache>true</Cache>
      <CacheTTLSeconds>60</CacheTTLSeconds>
    </CacheSettings>
  </DomainManager>
  <AddressManager>
    <Url>http://localhost/ConfigService/DomainManagerService.svc/Addresses</Url>
	<CacheSettings>
      <Cache>true</Cache>
      <CacheTTLSeconds>60</CacheTTLSeconds>
    </CacheSettings>
  </AddressManager>
  <MdnMonitor>
    <Url>http://localhost/ConfigService/MonitorService.svc/Dispositions</Url>
	<CacheSettings>
      <Cache>true</Cache>
      <CacheTTLSeconds>60</CacheTTLSeconds>
    </CacheSettings>
  </MdnMonitor>
  <Log>
    <DirectoryPath>C:\inetpub\logs</DirectoryPath>
    <NamePrefix>gateway</NamePrefix>
    <RolloverFrequency>Day</RolloverFrequency>
    <Level>Trace</Level>
  </Log>
  <InternalMessage>
    <PickupFolder>C:\inetpub\mailroot\pickup</PickupFolder>
    <EnableRelay>false</EnableRelay>
  </InternalMessage> 
  <Notifications>
    <AutoResponse>true</AutoResponse>
    <AlwaysAck>true</AlwaysAck>
    <Text>Message Delivery Notification</Text>
  </Notifications>
  
  <PrivateCerts>
    <ServiceResolver>
      <ClientSettings>
        <Url>http://localhost/ConfigService/CertificateService.svc/Certificates</Url>
		<CacheSettings>
          <Cache>true</Cache>
          <CacheTTLSeconds>60</CacheTTLSeconds>
        </CacheSettings>
      </ClientSettings>
    </ServiceResolver>    
  </PrivateCerts>

  <PublicCerts>
    <DnsResolver>
      <ServerIP>8.8.8.8</ServerIP>
	  <BackupServerIP>8.8.4.4</BackupServerIP>
      <Timeout>5000</Timeout>
	  <Cache>true</Cache>
    </DnsResolver>
    <!--
    <MachineResolver>
      <Name>NHINDExternal</Name>
    </MachineResolver>
    -->
	<PluginResolver>
      <Definition>
        <TypeName>Surescripts.Health.Direct.ResolverPlugins.LdapCertResolverProxy, Surescripts.Health.Direct.ResolverPlugins</TypeName>
        <Settings>
          <ServerIP>8.8.8.8</ServerIP>
		  <BackupServerIP>8.8.4.4</BackupServerIP>
		  <Timeout>5000</Timeout>
		  <Cache>true</Cache>
        </Settings>
      </Definition>
    </PluginResolver>
  </PublicCerts>
  <Anchors>
	<PluginResolver>
      <!-- NEW Resolver that COMBINES Anchors from multiple sources into a single list-->
      <Definition>
        <TypeName>Health.Direct.ResolverPlugins.MultiSourceAnchorResolver, Health.Direct.ResolverPlugins</TypeName>
        <Settings>
		  <!-- New Bundle Resolver -->
          <BundleResolver>
            <ClientSettings>
              <Url>http://localhost/ConfigService/CertificateService.svc/Bundles</Url>
            </ClientSettings>
            <CacheSettings>
              <Cache>true</Cache>
              <NegativeCache>true</NegativeCache>
              <!-- Set cache to longer duration in production -->
              <CacheTTLSeconds>60</CacheTTLSeconds>
            </CacheSettings>
            <MaxRetries>1</MaxRetries>
            <Timeout>30000</Timeout> <!-- In milliseconds -->
            <VerifySSL>true</VerifySSL>
          </BundleResolver>
		  <!-- Standard Resolver that pulls from Anchor store -->
          <ServiceResolver>
            <ClientSettings>
              <Url>http://localhost/ConfigService/CertificateService.svc/Anchors</Url>
            </ClientSettings>
            <CacheSettings>
              <Cache>true</Cache>
              <NegativeCache>true</NegativeCache>
              <CacheTTLSeconds>60</CacheTTLSeconds>
            </CacheSettings>
          </ServiceResolver>
        </Settings>
      </Definition>
    </PluginResolver>    
  </Anchors>
  
  <CertPolicies>
    <Public>
      <ClientSettings>
        <Url>http://localhost/ConfigService/DomainManagerService.svc/CertPolicies</Url>
      </ClientSettings>
      <CacheSettings>
        <Cache>true</Cache>
        <NegativeCache>true</NegativeCache>
        <CacheTTLSeconds>60</CacheTTLSeconds>
      </CacheSettings>
    </Public>
    <Private>
      <ClientSettings>
        <Url>http://localhost/ConfigService/DomainManagerService.svc/CertPolicies</Url>
      </ClientSettings>
      <CacheSettings>
        <Cache>true</Cache>
        <NegativeCache>true</NegativeCache>
        <CacheTTLSeconds>60</CacheTTLSeconds>
      </CacheSettings>
    </Private>
    <Trust>
      <ClientSettings>
        <Url>http://localhost/ConfigService/DomainManagerService.svc/CertPolicies</Url>
      </ClientSettings>
      <CacheSettings>
        <Cache>true</Cache>
        <NegativeCache>true</NegativeCache>
        <CacheTTLSeconds>60</CacheTTLSeconds>
      </CacheSettings>
    </Trust>
  </CertPolicies>
  
  <Trust>
    <MaxIssuerChainLength>4</MaxIssuerChainLength>
    <RevocationCheckMode>Online</RevocationCheckMode>
    <Timeout>10000</Timeout>
  </Trust>
  
  <Cryptographer>
    <DefaultEncryption>AES128</DefaultEncryption>
    <DefaultDigest>SHA256</DefaultDigest>
  </Cryptographer>
  
  <RawMessage>
    <!--<CopyFolder>C:\inetpub\mailroot\Gateway\raw</CopyFolder>-->
  </RawMessage>
  <BadMessage>
    <CopyFolder>C:\inetpub\mailroot\Gateway\badMail</CopyFolder>
  </BadMessage>
  <ProcessIncoming>
    <!--<CopyFolder>C:\inetpub\mailroot\Gateway\incoming</CopyFolder>-->
    <EnableRelay>true</EnableRelay>
  </ProcessIncoming>
  <ProcessOutgoing>
    <!--<CopyFolder>C:\inetpub\mailroot\Gateway\outgoing</CopyFolder>-->
    <EnableRelay>true</EnableRelay>
  </ProcessOutgoing>
</SmtpAgentConfig>