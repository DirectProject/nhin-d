<?xml version="1.0" encoding="utf-8" ?>
<!--
  SAMPLE
  Compliant with schema parsed by: NHINDirect.ScriptAgent.SmtpAgentSettings 
  Customize as per your needs
-->
<SmtpAgentConfig>
  <Domain>redmond.hsgincubator.com</Domain>
  <Domain>nhind.hsgincubator.com</Domain>
  <Postmaster>postmaster@redmond.hsgincubator.com</Postmaster>  
  <Log>
    <DirectoryPath>C:\inetpub\logs</DirectoryPath>
    <NamePrefix>testSmtpAgent</NamePrefix>
    <FileChangeFrequency>24</FileChangeFrequency>
  </Log>
  <Cryptographer>
    <DefaultEncryption>RSA_3DES</DefaultEncryption>
    <DefaultDigest>SHA1</DefaultDigest>
  </Cryptographer>
  <PrivateCerts>
    <!--
    <ServiceResolver>
      <ClientSettings>
        <Url>http://localhost:6692/CertificateService.svc/Certificates</Url>
      </ClientSettings>
    </ServiceResolver>
  -->
    <MachineResolver>
      <Name>NHINDPrivate</Name>
    </MachineResolver>
  </PrivateCerts>
  <PublicCerts>
    <!--
    <DnsResolver>
      <ServerIP>127.0.0.1</ServerIP>
      <Timeout>5000</Timeout>
    </DnsResolver>
    -->
    <MachineResolver>
      <Name>NHINDExternal</Name>
    </MachineResolver>
  </PublicCerts>
  <Anchors>
    <!--
    <ServiceResolver>
      <ClientSettings>
        <Url>http://localhost:6692/CertificateService.svc/Anchors</Url>
      </ClientSettings>
    </ServiceResolver>
    -->
    <MachineResolver>
      <Incoming>
        <Name>NHINDAnchors</Name>
      </Incoming>
      <Outgoing>
        <Name>NHINDAnchors</Name>
      </Outgoing>
    </MachineResolver>
  </Anchors>
  <!--
  <AddressManager>
    <Url>http://localhost:6692/DomainManagerService.svc/Addresses</Url>
  </AddressManager>
  -->
  <IncomingRoutes>
    <Route>
      <AddressType>XDR</AddressType>
      <CopyFolder>C:\inetpub\mailroot\xdr</CopyFolder>
    </Route>
  </IncomingRoutes>
  <MessageBounce>
    <MailPickupFolder>C:\inetpub\mailroot\pickup</MailPickupFolder>
    <EnableForOutgoing>true</EnableForOutgoing>
    <EnableForIncoming>false</EnableForIncoming>
    <OutgoingTemplate>
      <Subject>Message Delivery Failure</Subject>
      <Body>The following recipients are not trusted: </Body>
    </OutgoingTemplate>
  </MessageBounce>
  <RawMessage>
    <CopyFolder>C:\inetpub\mailroot\raw</CopyFolder>
  </RawMessage>
  <BadMessage>
    <CopyFolder>C:\inetpub\mailroot\badMail</CopyFolder>
  </BadMessage>
  <ProcessIncoming>
    <CopyFolder>C:\inetpub\mailroot\incoming</CopyFolder>
  </ProcessIncoming>
  <ProcessOutgoing>
    <CopyFolder>C:\inetpub\mailroot\outgoing</CopyFolder>
  </ProcessOutgoing>
</SmtpAgentConfig>
