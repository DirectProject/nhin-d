<?xml version="1.0" encoding="utf-8" ?>
<!--
  SAMPLE
  Compliant with schema parsed by: NHINDirect.ScriptAgent.SmtpAgentSettings 
  Customize as per your needs
-->
<SmtpAgentConfig>
  <Domain>redmond.hsgincubator.com</Domain>
  <Postmaster>postmaster@redmond.hsgincubator.com</Postmaster>
  <Log>
    <DirectoryPath>C:\inetpub\logs</DirectoryPath>
    <NamePrefix>smtpGateway</NamePrefix>
    <FileChangeFrequency>24</FileChangeFrequency>
  </Log>
  <PrivateCerts>
    <MachineResolver>
      <Name>NHINDPrivate</Name>
    </MachineResolver>
  </PrivateCerts>
  <PublicCerts>
    <!--
    <DnsResolver>
      <ServerIP>127.0.0.1</ServerIP>
      <Timeout>5000</Timeout>
    </DnsResolver>
    -->
    <MachineResolver>
      <Name>NHINDExternal</Name>
    </MachineResolver>
  </PublicCerts>
  <Anchors>
    <MachineResolver>
      <Incoming>
        <Name>NHINDAnchors</Name>
      </Incoming>
      <Outgoing>
        <Name>NHINDAnchors</Name>
      </Outgoing>
    </MachineResolver>
  </Anchors>
  <RawMessage>
    <CopyFolder>C:\inetpub\mailroot\raw</CopyFolder>
  </RawMessage>
  <BadMessage>
    <CopyFolder>C:\inetpub\mailroot\badMail</CopyFolder>
  </BadMessage>
  <ProcessIncoming>
    <CopyFolder>C:\inetpub\mailroot\incoming</CopyFolder>
  </ProcessIncoming>
  <ProcessOutgoing>
    <CopyFolder>C:\inetpub\mailroot\outgoing</CopyFolder>
  </ProcessOutgoing>
</SmtpAgentConfig>
